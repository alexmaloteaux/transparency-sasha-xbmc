<window id="2004">
	<defaultcontrol>61</defaultcontrol>
	<controls>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>black.png</texture>
			<animation effect="fade" start="0" end ="70" time="300">WindowOpen</animation>
			<animation effect="fade" start="70" end ="0" time="300">WindowClose</animation>
		</control>
		<control type="group">
			<control type="image">
				<posx>0</posx>
				<posy>585</posy>
				<width>1280</width>
				<height>115</height>
				<texture border="10">underlay.png</texture>
			</control>
			<control type="label">
				<posx>257</posx>
				<posy>627</posy>
				<width>550</width>
				<height>30</height>
				<font>font-30</font>
				<textcolor>blue</textcolor>
				<shadowcolor>black</shadowcolor>
				<scroll>true</scroll>
				<align>left</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.label]</label>
				<scrollspeed>0</scrollspeed>
			</control>
			<control type="largeimage">
				<posx>16</posx>
				<posy>491</posy>
				<width>218</width>
				<height>218</height>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<texture diffuse="thumb-diffuse.png" background="true">$INFO[Listitem.Icon]</texture>
			</control>
		</control>
		<control type="group">
			<include>dialogeffect4</include>
			<control type="label" id="1">
				<description>heading label</description>
				<posx>40</posx>
				<posy>45</posy>
				<width>1200</width>
				<height>30</height>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>blue</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>font-32</font>
				<label>$LOCALIZE[262]</label>
			</control>
			<control type="image">
				<posx>40</posx>
				<posy>84</posy>
				<width>1200</width>
				<height>2</height>
				<texture>separator.png</texture>
			</control>
			<control type="textbox" id="5">
				<description>textarea</description>
				<posx>200</posx>
				<posy>108</posy>
				<width>880</width>
				<height>350</height>
				<label>-</label>
				<font>font-19</font>
				<align>justify</align>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<pagecontrol>61</pagecontrol>
			</control>
			<control type="spincontrol" id="61">
				<description>Next page button</description>
				<posx>1180</posx>
				<posy>699</posy>
				<subtype>page</subtype>
				<font>font-19</font>
				<onleft>61</onleft>
				<onright>61</onright>
				<ondown>5</ondown>
				<onup>50</onup>
				<textcolor>white</textcolor>
				<showonepage>true</showonepage>
			</control>
			<control type="image">
				<posx>40</posx>
				<posy>480</posy>
				<width>1200</width>
				<height>2</height>
				<texture>separator.png</texture>
			</control>
		</control>
	</controls>
</window>

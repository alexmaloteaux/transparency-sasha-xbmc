<includes>
	<include name="FullScreenMusicMediaCodecVars">
		<width>65</width>
		<height>40</height>
	</include>
	<include name="FullScreenMusicMediaFlags">
		<control type="grouplist">
			<posx>360</posx>
			<posy>160</posy>
			<width>180</width>
			<height>40</height>
			<itemgap>20</itemgap>
			<orientation>horizontal</orientation>
		<!-- Audio Codec -->
			<control type="image">
				<include>FullScreenMusicMediaCodecVars</include>
				<texture>flags/music/audiocodec/$INFO[MusicPlayer.Codec,,.png]</texture>
				<visible>!Window.IsVisible(MusicOSD)</visible>
			</control>
		<!-- Record Label -->
			<control type="image">
				<include>FullScreenMusicMediaCodecVars</include>
				<texture>flags/music/recordlabel/$INFO[MusicPlayer.Property(Album_Label),,.png]</texture>
				<visible>!Window.IsVisible(MusicOSD)</visible>
			</control>
		</control>
	</include>
</includes>

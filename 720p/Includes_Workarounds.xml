	<include name="clearart-dialogfullscreeninfo">
		<control type="largeimage" id="7013">
			<description>dirty hack for showing clearart image</description>
			<posx>10</posx>
			<posy>183</posy>
			<width>279</width>
			<height>157</height>
			<texture>$INFO[Player.FolderPath]../clearart.png</texture>
			<aspectratio align="center" aligny="bottom">keep</aspectratio>
			<include>VisibleFadeEffect</include>
			<animation effect="slide" start="-230,0" end="0,0" time="300">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="-230,0" time="300">WindowClose</animation>
			<visible>Skin.HasSetting(ClearArt)</visible>
		</control>
	</include>
	<include name="clearart-dialogseekbar">
		<control type="largeimage" id="7014">
			<description>dirty hack for showing clearart image</description>
			<posx>1</posx>
			<posy>63</posy>
			<width>279</width>
			<height>157</height>
			<texture>$INFO[Player.FolderPath]../clearart.png</texture>
			<aspectratio align="right" aligny="bottom">keep</aspectratio>
			<include>VisibleFadeEffect</include>
			<visible>Skin.HasSetting(ClearArt) + VideoPlayer.Content(Episodes) + Window.IsVisible(FullscreenVideo) + !Window.IsVisible(FullscreenInfo) + !Window.IsVisible(VideoOSD)</visible>
		</control>
	</include>
	<include name="games-thumb">
		<control type="largeimage">
			<posx>10</posx>
			<posy>414</posy>
			<width>214</width>
			<height>300</height>
			<aspectratio scalediffuse="false">stretch</aspectratio>
			<texture fallback="DefaultProgram.png" diffuse="thumb-diffuse.png" background="true">$INFO[Container.FolderPath]folder.jpg</texture>
			<fadetime>IconCrossfadeTime</fadetime>
			<visible>substring(Container.FolderPath,Games) + !ListItem.IsFolder + !stringcompare(ListItem.Label,..)</visible>
		</control>
	</include>
        <include name="fanartslideshow-musicvisualisation">
                <control type="multiimage">
                        <description>dirty hack for showing fanart slideshow instead of visualisation</description>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1280</width>
                        <height>720</height>
                        <imagepath background="true">$INFO[Player.FolderPath]../extrafanart/</imagepath>
                        <aspectratio>scale</aspectratio>
                        <timeperimage>5000</timeperimage>
                        <randomize>true</randomize>
                        <fadetime>750</fadetime>
                        <include condition="!Skin.HasSetting(FanartSlideshowAnimation)">backgroundanimation2</include>
                        <include>VisibleFadeEffect</include>
                        <visible>Player.HasAudio + Skin.HasSetting(FanartSlideshowNoVisualisation)</visible>
                </control>

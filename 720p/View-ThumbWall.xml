<includes>
	<include name="Thumbwall-Videos">
		<control type="panel" id="589">
			<visible>Container.Content(Movies)</visible>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<onleft>9000</onleft>
			<onright>60</onright>
			<onup>589</onup>
			<ondown>589</ondown>
			<viewtype label="ThumbWall">icon</viewtype>
			<pagecontrol>60</pagecontrol>
			<scrolltime>200</scrolltime>
			<preloaditems>2</preloaditems>
			<itemlayout width="80" height="120">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>80</width>
					<height>120</height>
					<texture>black-frame.png</texture>
                                        <colordiffuse>AAFFFFFF</colordiffuse>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>80</width>
					<height>120</height>
					<aspectratio>stretch</aspectratio>
					<texture fallback="DefaultVideo.png" background="true">$INFO[Listitem.Thumb]</texture>
					<bordersize>1</bordersize>
                                        <colordiffuse>39FFFFFF</colordiffuse>
				</control>
			</itemlayout>
			<focusedlayout width="80" height="120">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>80</width>
					<height>120</height>
					<aspectratio>stretch</aspectratio>
					<texture fallback="DefaultVideo.png" background="true">$INFO[Listitem.Thumb]</texture>
					<bordertexture>black.png</bordertexture>
					<bordersize>2</bordersize>
					<animation effect="zoom" start="100" end="140" center="auto">Focus</animation>
				</control>
			</focusedlayout>
		</control>
	</include>
</includes>

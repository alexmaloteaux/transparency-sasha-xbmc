<includes>
	<include name="Item">
		<control type="image">
			<posx>0</posx>
			<posy>560</posy>
			<width>1280</width>
			<height>240</height>
			<texture>floor.png</texture>
			<include>Window_OpenClose_Animation</include>
			<visible>Control.IsVisible(590)</visible>
		</control>
		<control type="group">
			<control type="image">
				<posx>-40</posx>
				<posy>610</posy>
				<width>220</width>
				<height>220</height>
				<texture>disc-dvd.png</texture>
				<visible>![stringcompare(ListItem.VideoResolution,720) | stringcompare(ListItem.VideoResolution,1080)] + Control.IsVisible(590) + !stringcompare(ListItem.Label,..)</visible>
			</control>
			<control type="image">
				<posx>-40</posx>
				<posy>610</posy>
				<width>220</width>
				<height>220</height>
				<texture>disc-bluray.png</texture>
				<visible>[stringcompare(ListItem.VideoResolution,720) | stringcompare(ListItem.VideoResolution,1080)] + Control.IsVisible(590) + !stringcompare(ListItem.Label,..)</visible>
			</control>
		</control>
		<control type="group">
			<include>Window_OpenClose_Animation</include>
			<include condition="Skin.HasSetting(HateTransparency)">T-Underlay11</include>
			<visible>Control.IsVisible(590)</visible>
			<control type="label">
				<posx>40</posx>
				<posy>570</posy>
				<width>1280</width>
				<height>35</height>
				<font>font-35</font>
				<textcolor>blue</textcolor>
				<shadowcolor>ff000000</shadowcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>[B]$INFO[ListItem.Label][/B]</label>
			</control>
			<control type="label">
				<posx>160</posx>
				<posy>615</posy>
				<width>1000</width>
				<height>20</height>
				<font>font-21</font>
				<textcolor>white</textcolor>
				<shadowcolor>ff000000</shadowcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>[B]$INFO[ListItem.Year] $INFO[ListItem.Duration, - ][/B]</label>
			</control>
			<control type="label">
				<posx>175</posx>
				<posy>640</posy>
				<width>1000</width>
				<height>20</height>
				<font>font-21</font>
				<textcolor>white</textcolor>
				<shadowcolor>ff000000</shadowcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>[B]$INFO[ListItem.Studio][/B]</label>
			</control>
			<control type="label">
				<posx>188</posx>
				<posy>665</posy>
				<width>1000</width>
				<height>20</height>
				<font>font-21</font>
				<textcolor>white</textcolor>
				<shadowcolor>ff000000</shadowcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>[B]$INFO[ListItem.Genre][/B]</label>
			</control>
			<control type="label">
				<posx>195</posx>
				<posy>690</posy>
				<width>1000</width>
				<height>20</height>
				<font>font-21</font>
				<textcolor>white</textcolor>
				<shadowcolor>ff000000</shadowcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>[B]$INFO[ListItem.TagLine][/B]</label>
			</control>
		</control>
		<control type="image">
			<posx>715</posx>
			<posy>626</posy>
			<width>93</width>
			<height>63</height>
			<texture>special://skin/images/flags/movies/studio/$INFO[ListItem.Studio,,.png]</texture>
			<visible>!IsEmpty(ListItem.Studio) + Control.IsVisible(590)</visible>
		</control>
		<control type="group">
			<posx>700</posx>
			<posy>260</posy>
			<include>Window_OpenClose_Animation</include>
			<animation effect="rotatey" center="1020" start="60" end="60" time="0" condition="true">Conditional</animation>
			<visible>Control.IsVisible(590)</visible>
			<control type="image">
				<posx>310</posx>
				<posy>65</posy>
				<width>184</width>
				<height>272</height>
				<texture>$INFO[ListItem.Icon]</texture>
				<visible>stringcompare(ListItem.Label,..)</visible>
			</control>
			<control type="image">
				<posx>310</posx>
				<posy>369</posy>
				<width>184</width>
				<height>272</height>
				<texture flipy="true" diffuse="diffuse_mirror2.png">$INFO[ListItem.Icon]</texture>
				<visible>stringcompare(ListItem.Label,..)</visible>
			</control>
			<control type="image">
				<posx>310</posx>
				<posy>84</posy>
				<width>184</width>
				<height>272</height>
				<texture background="true">$INFO[ListItem.Icon]</texture>
				<fadetime>IconCrossfadeTime</fadetime>
				<visible>!stringcompare(ListItem.Label,..)</visible>
			</control>
			<control type="image">
				<posx>310</posx>
				<posy>369</posy>
				<width>184</width>
				<height>272</height>
				<texture flipy="true" diffuse="diffuse_mirror2.png">$INFO[ListItem.Icon]</texture>
				<fadetime>IconCrossfadeTime</fadetime>
				<visible>!stringcompare(ListItem.Label,..)</visible>
			</control>
			<control type="image">
				<posx>310</posx>
				<posy>60</posy>
				<width>197</width>
				<height>315</height>
				<texture>case-dvd.png</texture>
				<visible>![stringcompare(ListItem.VideoResolution,720) | stringcompare(ListItem.VideoResolution,1080)] + !stringcompare(ListItem.Label,..)</visible>
			</control>
			<control type="image">
				<posx>310</posx>
				<posy>60</posy>
				<width>197</width>
				<height>315</height>
				<texture>case-bluray.png</texture>
				<visible>[stringcompare(ListItem.VideoResolution,720) | stringcompare(ListItem.VideoResolution,1080)] + !stringcompare(ListItem.Label,..)</visible>
			</control>
			<control type="image">
				<posx>310</posx>
				<posy>350</posy>
				<width>197</width>
				<height>315</height>
				<texture flipy="true" diffuse="diffuse_mirror_case.png">case-dvd.png</texture>
				<visible>![stringcompare(ListItem.VideoResolution,720) | stringcompare(ListItem.VideoResolution,1080)] + !stringcompare(ListItem.Label,..)</visible>
			</control>
			<control type="image">
				<posx>310</posx>
				<posy>350</posy>
				<width>197</width>
				<height>315</height>
				<texture flipy="true" diffuse="diffuse_mirror_case.png">case-bluray.png</texture>
				<visible>[stringcompare(ListItem.VideoResolution,720) | stringcompare(ListItem).VideoResolution,1080)] + !stringcompare(ListItem.Label,..)</visible>
			</control>
		</control>
		<control type="wraplist" id="590">
			<include>Window_OpenClose_Animation</include>
			<posx>0</posx>
			<posy>260</posy>
			<width>1280</width>
			<height>440</height>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<onleft>590</onleft>
			<onright>590</onright>
			<viewtype label="Item">list</viewtype>
			<pagecontrol>60</pagecontrol>
			<orientation>horizontal</orientation>
			<scrolltime>250</scrolltime>
			<focusedposition>3</focusedposition>
			<visible>Container.Content(Movies)</visible>
			<itemlayout height="429" width="257" />
			<focusedlayout height="429" width="257">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>300</width>
					<height>440</height>
					<texture></texture>
				</control>
			</focusedlayout>
		</control>
	</include>
</includes>

<window id="24">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<views>50,51,52,53,55,57,593,596,599</views>
	<controls>
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>2000</fadetime>
			<imagepath fallback="special://skin/backgrounds/background-videos.jpg">$INFO[Skin.String(Custom_Back_Videos_Folder)]</imagepath>
			<aspectratio>scale</aspectratio>
			<include condition="Skin.HasSetting(AnimateBackgrounds)">backgroundanimation</include>
			<include>VisibleFadeEffect</include>
			<visible>[IsEmpty(ListItem.Property(Fanart_Image)) + IsEmpty(Fanart.Image)]</visible>
		</control>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture background="true">$INFO[Fanart.Image]</texture>
			<aspectratio>scale</aspectratio>
			<fadetime>FanartCrossfadeTime</fadetime>
			<include>VisibleFadeEffect</include>
			<visible>!IsEmpty(Fanart.Image)</visible>
		</control>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
			<aspectratio>scale</aspectratio>
			<fadetime>FanartCrossfadeTime</fadetime>
			<include>VisibleFadeEffect</include>
			<visible>!IsEmpty(ListItem.Property(Fanart_Image))</visible>
		</control>
		<include condition="!Skin.HasSetting(SafeMode)">fanart-myvideo</include>
		<include condition="Skin.HasSetting(MoviesExtraFanart) + !Skin.HasSetting(SafeMode)">fanart-extra-movies-files</include>
		<include condition="Skin.HasSetting(TVShowsExtraFanart) + !Skin.HasSetting(SafeMode)">fanart-extra-tvshows-files</include>
		<include condition="Skin.HasSetting(SeasonFanart) + !Skin.HasSetting(SafeMode)">fanart-seasons-filemode</include>
		<control type="group">
			<include>ContentFade</include>
			<include condition="!Skin.HasSetting(Hide-Videos-CoverFlow)">CoverFlow-Movies</include>			<!-- view id = 55 -->
			<include condition="!Skin.HasSetting(Hide-Videos-Icons)">Icons-Movies</include>				<!-- view id = 57 -->
			<include condition="!Skin.HasSetting(Hide-Videos-Slide)">Slide</include>				<!-- view id = 596 -->
		</control>
		<control type="group">
			<include>Window_OpenClose_Right_Panel_Animation</include>
			<include>ContentFade</include>
			<control type="group">
				<animation effect="slide" start="0,0" end="1105,0" time="300" tween="quadratic" easing="out" condition="Control.IsVisible(55) | Control.IsVisible(57) | Control.IsVisible(596)">Conditional</animation>
				<animation effect="slide" start="0,0" end="700,111" time="300" tween="quadratic" easing="out" condition="Control.IsVisible(50) + !Skin.HasSetting(FanartShort) + !Skin.HasSetting(FanartLong)">Conditional</animation>
				<animation effect="slide" start="0,0" end="700,257" time="300" tween="quadratic" easing="out" condition="Control.IsVisible(50) + Skin.HasSetting(FanartShort)">Conditional</animation>
				<animation effect="slide" start="0,0" end="700,-122" time="300" tween="quadratic" easing="out" condition="Control.IsVisible(50) + Skin.HasSetting(FanartLong)">Conditional</animation>
			<animation effect="slide" start="0,0" end="75,0" time="200" delay="200" tween="quadratic" easing="out" condition="Skin.HasSetting(WideSideMenuButtons) + ControlGroup(9000).HasFocus + ![Control.IsVisible(50) | Control.IsVisible(55) | Control.IsVisible(596)]">Conditional</animation>
				<include>ContentPanel</include>
				<include condition="!Skin.HasSetting(Hide-Videos-FullList)">FullList-Videos</include>		<!-- view id = 52 -->
				<include condition="!Skin.HasSetting(Hide-Videos-List)">List-Videos</include>			<!-- view id = 51 -->
				<include condition="!Skin.HasSetting(Hide-Videos-Thumbnail)">Thumbnail-Videos</include>		<!-- view id = 53 -->
				<include>Fanart-Videos</include>								<!-- view id = 50 -->
				<include condition="!Skin.HasSetting(Hide-Videos-WideIcon)">WideIcon-VideoFiles</include>	<!-- view id = 593 -->
				<include condition="!Skin.HasSetting(Hide-Videos-MediaInfo)">MediaInfo-AddOns</include>		<!-- view id = 599 -->
				<include>AllViewCommonPageControls</include>
				<include>ScrollOffsetLabel</include>
			</control>
		</control>
		<control type="group">
			<include>ContentFade2</include>
			<include>Fanart-Videos_Root_Extras</include>
			<include>Fanart-Videos_Extras</include>
		</control>
		<control type="group">
			<posy>23</posy>
			<include>ContentFade</include>
			<include>Window_OpenClose_Left_Panel_Animation</include>
			<include>CommonNowPlaying</include>
			<visible>!Skin.HasSetting(KioskMode)</visible>
			<control type="group" id="9000">
				<include condition="!Skin.HasSetting(WideSideMenuButtons)">Window_OpenClose_Left_Panel_Position_Normal</include>
				<include condition="Skin.HasSetting(WideSideMenuButtons)">Window_OpenClose_Left_Panel_Position_Wide</include>
				<include>SideMenuAnim</include>
				<control type="image">
					<posx>0</posx>
					<posy>-16</posy>
					<height>16</height>
					<texture border="0,0,10,0">shadow-top2.png</texture>
					<include condition="!Skin.HasSetting(WideSideMenuButtons)">ButtonCommonValuesNormal</include>
					<include condition="Skin.HasSetting(WideSideMenuButtons)">ButtonCommonValuesWide</include>
				</control>
				<control type="button" id="2">
					<description>View As button</description>
					<posx>0</posx>
					<posy>0</posy>
					<include>ButtonCommonValues</include>
					<label>-</label>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>610</onup>
					<ondown>3</ondown>
				</control>
				<control type="button" id="3">
					<description>Sort by button</description>
					<posx>0</posx>
					<posy>45</posy>
					<include>ButtonCommonValues</include>
					<label>103</label>
					<onleft>50</onleft>
					<onright>4</onright>
					<onup>2</onup>
					<ondown>5</ondown>
				</control>
				<control type="togglebutton" id="4">
					<description>Sort asc</description>
					<posy>63</posy>
					<width>15</width>
					<height>15</height>
					<label>-</label>
					<onleft>3</onleft>
					<onright>50</onright>
					<onup>2</onup>
					<ondown>5</ondown>
					<include condition="!Skin.HasSetting(WideSideMenuButtons)">ToggleButtonNormal</include>
					<include condition="Skin.HasSetting(WideSideMenuButtons)">ToggleButtonWide</include>
				</control>
				<control type="radiobutton" id="5">
					<description>Library button</description>
					<posx>0</posx>
					<posy>90</posy>
					<label>$LOCALIZE[29800]</label>
					<onclick>ReplaceWindow(MyVideoLibrary)</onclick>
					<selected>Window.IsVisible(MyVideoLibrary)</selected>
					<include>ButtonCommonValues</include>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>3</onup>
					<ondown>7</ondown>
					<enable>Library.HasContent(Video)</enable>
				</control>
				<control type="radiobutton" id="7">
					<description>Stack Toggle</description>
					<posx>0</posx>
					<posy>135</posy>
					<include>ButtonCommonValues</include>
					<label>346</label>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>5</onup>
					<ondown>610</ondown>
				</control>
				<control type="button" id="610">
					<description>PlayerControls</description>
					<posx>0</posx>
					<posy>180</posy>
					<include>ButtonCommonValues</include>
					<label>16003</label>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>7</onup>
					<ondown>2</ondown>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<visible>Player.HasAudio | Player.HasVideo</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>182</posy>
					<height>16</height>
					<texture border="0,0,10,0">shadow-bottom2.png</texture>
					<animation effect="slide" end="0,45" time="0" condition="Player.HasAudio | Player.HasVideo">Conditional</animation>
					<include condition="!Skin.HasSetting(WideSideMenuButtons)">ButtonCommonValuesNormal</include>
					<include condition="Skin.HasSetting(WideSideMenuButtons)">ButtonCommonValuesWide</include>
				</control>
			</control>
		</control>
		<control type="group">
			<include>ContentFade</include>
			<include>Window_OpenClose_Header_Animation</include>
			<animation effect="slide" start="0,0" end="0,-75" time="300" tween="quadratic" easing="out" condition="Control.IsVisible(50) | Control.IsVisible(55) | Control.IsVisible(596)">Conditional</animation>
			<include condition="Skin.HasSetting(HateTransparency)">T-Header1</include>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>74</height>
				<texture>Header.png</texture>
			</control>
			<include>CommonFileCount</include>
			<control type="grouplist">
				<include>Breadcrumbs</include>
				<include>Breadcrumbs-Video-Files</include>
			</control>
		</control>
		<include condition="Skin.HasSetting(TouchScreenMode)">TouchScreenControls</include>
		<include condition="Skin.HasSetting(DebugMode)">debuginfo</include>
	</controls>
</window>

<window id="2999">
	<onload condition="Skin.HasSetting(HomeWatchlistMovies) | Skin.HasSetting(HomeWatchlistTVShows) | Skin.HasSetting(HomeWatchlistAlbums)">RunScript(script.watchlist,movies=true&amp;episodes=true&amp;albums=true&amp;limit=3)</onload>
	<onload condition="Skin.HasSetting(Use_Startup_Playlist)">PlayMedia(&quot;$INFO[Skin.String(Startup_Playlist_Path)]&quot;)</onload>
	<onload condition="Skin.HasSetting(NextAired)">RunScript(script.tv.show.next.aired,silent=True)</onload>
	<onload condition="Skin.HasSetting(HomeRandomMovies) | Skin.HasSetting(HomeRandomTVShows) | Skin.HasSetting(HomeRandomAlbums) | !Skin.HasSetting(HomeRandomAddons)">RunScript(script.randomitems,limit=3&amp;alarm=60)</onload>
	<onload>ReplaceWindow(Home)</onload>
	<allowoverlay>no</allowoverlay>
</window>
